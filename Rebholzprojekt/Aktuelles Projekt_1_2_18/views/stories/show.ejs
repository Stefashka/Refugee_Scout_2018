<% include ../partials/header %>

<head>
  <meta charset="utf-8" />
  <title>Upload images to server using Node JS</title>
  <script src="Scripts/jquery-3.1.1.min.js"></script>
  <script src="Scripts/jquery.form.min.js"></script>
  <script>
      $(document).ready(function () {
          var options = {
              beforeSubmit: showRequest,  // pre-submit callback
              success: showResponse  // post-submit callback
          };

          // bind to the form's submit event
          $('#frmUploader').submit(function () {
              $(this).ajaxSubmit(options);
              // always return false to prevent standard browser submit and page navigation
              return false;
          });
      });

      // pre-submit callback
      function showRequest(formData, jqForm, options) {
          alert('Uploading is starting.');
          return true;
      }

      // post-submit callback
      function showResponse(responseText, statusText, xhr, $form) {
          alert('status: ' + statusText + '\n\nresponseText: \n' + responseText );
      }
  </script>
</head>
<body>

<form id="frmUploader" enctype="multipart/form-data" action="<%= story._id %>/api/Upload/" method="post">
<div class="row"> <!-- Es wird eine Zeile angelegt  -->
    <div class="col-sm-12"> <!-- Diese Zeile geht Ã¼ber 12 Spalten  -->
        <div class="col-sm-4"> <!-- die Breite dieser Spalte ist 4 und hier drin befindet sich Step1 -->
            <p class="steps" style="color: #ff9900; font-size: 250%">Step 1</p>
            <p>Choose the number of the picture you would like to add or edit</p>
            <input class="form-control" type="number" name="picture_nr" id="picture_nr" placeholder="Order of picture number">
        </div>

        <div class="col-sm-4">
            <p class="steps" style="color: #ff9900; font-size: 250%">Step 2</p> <!--  Hier drin befindet sich Step 2 mit dem Picture Upload-->
            <p>Upload your picture</p>
            <input type="file" name="imgUploader" multiple />
           <p> <input style="background-color: #337ab7; color: white; border:none; border-radius: 6px; padding: 2%; width: 33%; margin-top: 2%;" type="submit" name="submit" id="btnSubmit" value="Upload" />
            </p>
        </div>

        <div class="col-sm-4">
            <p class="steps" style="color: #ff9900; font-size: 250%">Step 3</p> <!-- Hier Step 3 mit enter a text  -->
            <p>Enter text</p>
            <input class="form-control" cols="35" rows="4" type="text" name="description" id="description" placeholder="What does the picture show?">
        </div>
    </div>
</div>
</form>







